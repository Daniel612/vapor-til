<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>#(title) | Acronyms</title>
</head>
<body>
    #set("content") {
        <h1>#(acronym.short)</h1>
        <h2>#(acronym.long)</h2>

        <p>Created by <a href="/users/#(user.id)/">#(user.name)</a></p>

        #if(count(categories) > 0) {
            <h3>Categories</h3>
            <ul>
                #for(category in categories) {
                    <li>
                        <a href="/categories/#(categories.id)">
                            #(category.name)
                        </a>
                    </li>
                }
            </ul>
        }

        <form method="post" action="/acronyms/#(acronym.id)/delete">
            <a class="btn btn-primary" href="/acronyms/#(acronym.id)/edit" role="button">Edit</a>&nbsp;
            <input class="btn btn-danger" type="submit" value="Delete" />
        </form>
    }
</body>
</html>
#embed("base")